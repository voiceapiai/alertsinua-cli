  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug app",
      "cargo": {
        "args": [
          // "watch -x",
          "build",
          "--bin=alertsinua-tui",
          "--package=alertsinua-tui"
        ],
        "filter": {
          "name": "alertsinua-tui",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'alertsinua-tui'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=alertsinua-tui"
        ],
        "filter": {
          "name": "alertsinua-tui",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'alertsinua-tui'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=alertsinua-tui",
          "--package=alertsinua-tui"
        ],
        "filter": {
          "name": "alertsinua-tui",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "cargo build"
    }
  ]
}